import random

def roll_dice(num_dice):
    total = 0
    for _ in range(num_dice):
        roll = random.randint(1, 6)
        print(f"Rolled: {roll}")
        total += roll
    return total

def main():
    num_dice = int(input("How many dice would you like to roll? "))
    
    if num_dice <= 0:
        print("Please enter a positive number of dice.")
        return
    
    total = roll_dice(num_dice)
    print(f"Total sum of the rolled dice: {total}")

if __name__ == "__main":
    main()
