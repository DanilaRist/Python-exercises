"""
def remove_odd_numbers(numbers):
    even_numbers = [x for x in numbers if x % 2 == 0]
    return even_numbers

if __name__ == "__main__":
     integer_list = [1, 2, 3, 4, 5, 6, 7, 8, 9]

    even_list = remove_odd_numbers(integer_list)

    print("Original list:", integer_list)

